// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @unique @default(uuid())
  username   String      @unique
  password   String
  isActive   Boolean     @default(true) @map("is_active")
  userDetail UserDetail?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("user")
}

model UserDetail {
  id        String   @unique @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique @map("user_id")
  fName     String   @default("") @map("f_name")
  lName     String   @default("") @map("l_name")
  prefix    Prefix   @relation("userDetail", fields: [prefixId], references: [id])
  prefixId  Int      @map("prefix_id")
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@id([id])
  @@map("user_detail")
}

model Prefix {
  id         Int          @default(autoincrement())
  name       String       @default("")
  sortName   String       @default("")
  userDetail UserDetail[] @relation("userDetail")

  @@id([id])
  @@map("prefix")
}
